<!DOCTYPE html>
<html>
<head>
	<title></title>
	<%- include ../layout/head %>
	<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
  	<script>tinymce.init({ selector:'textarea' });</script>
</head>
<body>
	<div class="container">
		<%- include ../layout/nav %>
		<div class="panel panel-default">
            <div class="panel-heading">
                Edit Post
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                    	<% if (data_view_edit && data_view_edit.error ) {%>
	           			 	<div id="login-alert" class="alert alert-danger col-sm-12">
	                    		<%= data_view_edit.error %>
	                		</div>
                    	<% } %> 

                        <form role="form" method="" action="">
                            <input type="hidden" name="id" class="id_cl" value="<% if (data_view_edit && data_view_edit.post){ %><%= data_view_edit.post.id%><% } %>">
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control title_cl" name="title" placeholder="Title"
                                    value="<% if (data_view_edit && data_view_edit.post){ %><%= data_view_edit.post.title%><% } %>" 
                                >
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control content_cl" name="content" placeholder="Content">
                                    <% if (data_view_edit && data_view_edit.post){ %><%= data_view_edit.post.content%><% } %>
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label>Author</label>
                                <input class="form-control author_cl" name="author" placeholder="Author"
                                    value="<% if (data_view_edit && data_view_edit.post){ %><%= data_view_edit.post.author%><% } %>"
                                >
                            </div>
                            <input type="button" name="" value="Update" class="btn btn-success btn_update">
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
	</div>

    <script src="/static/js/post.js"></script>
</body>
</html>